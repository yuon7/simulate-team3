{
  "name": "next-hono-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:hcm": "hcm 'src/**/*.module.css' -w",
    "hcm": "hcm 'src/**/*.module.css'",
    "build": "prisma generate --no-engine && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:js": "eslint --ext .ts,.tsx,.js --ignore-path .gitignore .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore",
    "lint:style": "stylelint \"src/**/*.css\" --ignore-path .gitignore",
    "lint:fix": "npm run lint:js -- --fix && prettier --write \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore && npm run lint:style -- --fix",
    "typecheck": "npm run hcm && tsc --noEmit",
    "format": "prettier --write \"./**/*.{ts,tsx,js,json,css,md}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "@mantine/core": "^7.17.0",
    "@mantine/hooks": "^7.17.0",
    "@mantinex/mantine-logo": "^1.1.0",
    "@next/eslint-plugin-next": "^15.3.4",
    "@prisma/extension-accelerate": "^2.0.2",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.44.4",
    "@tabler/icons-react": "^3.30.0",
    "@vercel/analytics": "^1.5.0",
    "geist": "^1.3.1",
    "hono": "^4.7.0",
    "lucide-react": "^0.503.0",
    "next": "^14.2.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript-eslint": "^8.26.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@prisma/client": "^6.16.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "^10.1.1",
    "happy-css-modules": "^3.2.0",
    "i": "^0.3.7",
    "jiti": "^2.4.2",
    "npm": "^11.2.0",
    "prettier": "3.5.3",
    "prisma": "^6.16.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^31.0.0",
    "typescript": "^5.8.2"
  }
}
